@{
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
    ViewData[index: "Title"] = "ForgotPassword";
}
@model SliceCloud.Repository.ViewModels.LoginViewModel

<div class="d-flex align-items-center justify-content-center h-100 p-2 p-md-5">
    <div>
        <div class="d-flex align-items-center justify-content-center mb-5 w-100">
            <div class="d-flex align-items-center justify-content-center gap-2">
                <img src="~/images/test2.jpg" alt="This is logo" width="15%" height="15%">
                <h1 class="font-weight-bold custom-body-text-color">SLICECLOUD</h1>
            </div>
        </div>
        <h2 class="mb-4">Forgot Password,</h2>
        <div>
            <form method="post" asp-action="ForgotPassword" asp-controller="Auth">
                <div class="mb-4">
                    <label class="form-label text-muted mb-3">
                        Enter your email and we'll send you a link to reset your password
                    </label>
                    <div class="d-flex align-items-center">
                        <input type="password" class="form-control" asp-for="Password" id="custom-password-input"
                            name="password" placeholder="Password*">
                        <img src="~/images/icons/hidden.png" id="toggle_button_eye"
                            style="display: inline; margin-left: -23px; vertical-align: middle;"
                            class="custom-cursor-pointer" onClick="toggle()">

                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <button class="btn btn-primary w-100" type="submit">Send</button>
                <div class="d-flex justify-content-center mt-3">
                    <a asp-controller="Auth" asp-action="Login" class="text-decoration-none custom-link-color">Back to login</a>
                </div>
            </form>
        </div>
    </div>
</div>